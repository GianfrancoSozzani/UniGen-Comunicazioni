@model Comunicazioni.Models.LoginViewModel

<div class="d-flex flex-column align-items-center mt-3" style="justify-content: center;">
    <div class="w-25">
        <div style="height:5vh;">
            &nbsp;
        </div>
        <h1 class="text-center">Login</h1>

        <form method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" asp-for="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="PWD" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <p class="mt-3 text-center">Se non sei ancora registrato</p>
            <div class="d-flex justify-content-center">
                <a class="btn btn-secondary" asp-area="" asp-controller="Login" asp-action="Register">Registrati qui</a>
            </div>
        </form>
        <div style="height:5vh;">
            &nbsp;
        </div>
    </div>
</div>

@if (ViewData.ModelState[""]?.Errors.Any() == true)
{
    <script>
        alert('@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(ViewData.ModelState[""].Errors[0].ErrorMessage))');
    </script>
}

