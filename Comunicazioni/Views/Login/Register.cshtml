@model Comunicazioni.Models.RegisterViewModel
<div style="height:5vh;">
    &nbsp;
</div>
<div class="container">
    <h2>Registrazione Studente</h2>

    <form asp-action="Register" method="post" enctype="multipart/form-data">

        <!-- Sezione Account -->
        <fieldset>
            <legend>Dati Account</legend>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" maxlength="50" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" maxlength="50" />
            </div>
        </fieldset>

        <hr />

        <!-- Sezione Dati Anagrafici -->
        <fieldset>
            <legend>Dati Anagrafici</legend>

            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Nome" class="form-control" maxlength="50" />
            </div>

            <div class="form-group">
                <label>Cognome</label>
                <input asp-for="Cognome" class="form-control" maxlength="50" />
            </div>

            <div class="form-group">
                <label>Data di Nascita</label>
                <input asp-for="DataNascita" type="date" class="form-control" />
            </div>
        </fieldset>

        <hr />

        <!-- Sezione Residenza -->
        <fieldset>
            <legend>Residenza</legend>

            <div class="form-group">
                <label>Indirizzo</label>
                <input asp-for="Indirizzo" class="form-control" maxlength="50" />
            </div>

            <div class="form-group">
                <label>CAP</label>
                <input asp-for="CAP" class="form-control" maxlength="5" />
            </div>

            <div class="form-group">
                <label>Città</label>
                <input asp-for="Citta" class="form-control" maxlength="50" />
            </div>

            <div class="form-group">
                <label>Provincia</label>
                <input asp-for="Provincia" class="form-control" maxlength="2" />
            </div>
        </fieldset>

        <hr />

        <!-- Sezione Altri Dati -->
        <fieldset>
            <legend>Altri Dati</legend>

            <div class="form-group">
                <label>Immagine Profilo</label>
                <input type="file" name="uploadFile" class="form-control" />
            </div>

            <div class="form-group">
                <label>Tipo</label>
                <input asp-for="Tipo" class="form-control" maxlength="50" />
            </div>
        </fieldset>

        <hr />

        <button type="submit" class="btn btn-primary">Registrati</button>
        <div style="height:5vh;">
            &nbsp;
        </div>

    </form>
</div>

